@model AgroControl.Models.EventRejestrWejscWyjsc

@{
    ViewData["Title"] = "EditEventRejestrWejscWyjsc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edytuj zdarzenie</h1>

<h4>Rejestr wejść wyjść</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEventRejestrWejscWyjsc">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataIGodzinaWejścia" class="control-label"></label>
                <input asp-for="DataIGodzinaWejścia" class="form-control" />
                <span asp-validation-for="DataIGodzinaWejścia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NazwaOsobyWchodzacej" class="control-label"></label>
                <input asp-for="NazwaOsobyWchodzacej" class="form-control" />
                <span asp-validation-for="NazwaOsobyWchodzacej" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NazwaFirmy" class="control-label"></label>
                <input asp-for="NazwaFirmy" class="form-control" />
                <span asp-validation-for="NazwaFirmy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CelWejscia" class="control-label"></label>
                <input asp-for="CelWejscia" class="form-control" />
                <span asp-validation-for="CelWejscia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObiektGospodarczyID" class="control-label"></label>
                <select asp-for="ObiektGospodarczyID" class="form-control"
                        asp-items="@(new SelectList((List<ObiektGospodarczy>)ViewData["ObiektyGospodarcze"],"ID","Nazwa"))">
                </select>
                <span asp-validation-for="ObiektGospodarczyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataOstatniegoPobytu" class="control-label"></label>
                <input asp-for="DataOstatniegoPobytu" class="form-control" />
                <span asp-validation-for="DataOstatniegoPobytu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiejsceOstatniegoPobytu" class="control-label"></label>
                <input asp-for="MiejsceOstatniegoPobytu" class="form-control" />
                <span asp-validation-for="MiejsceOstatniegoPobytu" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CzyZastosowanoOchrone" /> @Html.DisplayNameFor(model => model.CzyZastosowanoOchrone)
                </label>
            </div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="EventType" />
            <input type="hidden" asp-for="GospodarstwoID" />
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

